  var now = new Date();
  var d_day = new Date('september 9,2016');
  var d_day_gap = now.getTime() - d_day.getTime();
  d_day_gap = Math.floor(d_day_gap / (1000 * 60 * 60 * 24)) * -1;
  if (d_day_gap == 0) {
    $("#promo_d_day").text("하루");
  } else if (d_day_gap == 1) {
