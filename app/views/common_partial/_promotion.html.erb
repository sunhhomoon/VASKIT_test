  }

  function promotion_overlay_toggle() {
    if($.cookie('promo') == null){
      $('#promotion_overlay').show();
      $('#promotion_ovelay_seg').scrollTop(0);
      $("#promotion_img").animateCss('slideInUp');
      $('#asks').hide();
